<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Staj Defteri Uygulaması</title>

    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/bootswatch/cerulean/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background: rgb(5,32,89); background: linear-gradient(90deg, rgba(5,32,89,1) 3%, rgba(3,18,22,1) 100%); ">

    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-action="Index" asp-controller="Book">Anasayfa</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Book">Defterlerim</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" asp-action="Logout" asp-controller="Auth">
                @if (User.Identity.IsAuthenticated)
                {
                    <h6 class="mr-sm-3 mt-2">@User.Identity.Name.ToUpper()</h6>
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit" >Çıkış Yap</button>
                }
            </form>
        </div>
    </nav>

    <!--Displaying Message-->
    @if (TempData["Message"] != null)
    {
        <div class="container" style="margin-top:10px; text-align:center;">
            @{
                var classString = "alert alert-dismissible alert-" + TempData["MessageState"];
                <div class="@classString" role="alert">@TempData["message"]</div>
            }
        </div>
    }


    <!--MainContent-->
    <div>@RenderBody()</div>

    <!--Scripts-->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
