@model InternshipsBookApp.Models.PageUpdateViewModel;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Update New Page Container-->
<div class="container mt-3">
    <h2>Sayfa Güncelle</h2>
    <br />
    <!--Update Page Form-->
    <form asp-action="Update" asp-controller="Page" method="post" class="mb-2">
        <div class="form-group">
            <label asp-for="@Model.Number"></label>
            <input type="text" class="form-control" asp-for="@Model.Number" required />
            <span asp-validation-for="@Model.Number"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Subject"></label>
            <input type="text" class="form-control" asp-for="@Model.Subject" required />
            <span asp-validation-for="@Model.Subject"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PageContent"></label>
            @Html.TextAreaFor(model => model.PageContent, new { @id = "editor1" })
            <span asp-validation-for="@Model.PageContent"></span>
        </div>
        <input type="hidden" asp-for="@Model.PageId" />
        <input type="hidden" asp-for="@Model.BookId" />
        <button type="submit" class="btn btn-success btn-lg btn-block">Güncelle</button>
    </form>
</div>

<script src="~/ckeditor/ckeditor.js" type="text/javascript"></script>

@*---CK Editor Js---*@
<script type="text/javascript">
    CKEDITOR.replace('editor1', {
        customConfig: '/ckeditor/Config.js'
    });
</script>